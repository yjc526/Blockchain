 
<% layout('layout/layout')%>
<div class="container">
  <h1>Wallet</h1><br>

<div><h3>Address</h3><%=address%></div><hr>
<div><h3>Balance</h3><%=balance%></div><hr>
<div class="container">
   <h1>Transaction List </h1>
   <table class="table table-hover table-striped">
      <thead>
         <tr>
            <th>#</th>
            <th>Block#</th>
            <th>From</th>
            <th>To</th>
            <th>Amount</th>
            <th>Valid?</th>
         </tr>
      </thead>
      <tbody>
         <% txs.forEach( function (el, idx) { %>
         <tr> 
            <td><%=idx%></td>
            <td class="text-truncate" style="max-width: 150px;" ><a href='/eth/block/<%=el[0]%>'><%=el[0]%></a></td>
            <% if(el[1].from == null){ %>
               <td class="text-truncate" style="max-width: 150px;" ><%=el[1].from%></td>
            <%}
            else{%> 
               <% if(address==el[1].from){%>
                  <td class="text-truncate" style="max-width: 150px; font-weight: bold" ><a href='/eth/wallet/<%=el[1].from%>'>
               <% } else {%>
                  <td class="text-truncate" style="max-width: 150px;" ><a href='/eth/wallet/<%=el[1].from%>'>
               <% } %>
               <%=el[1].from%></a></td>
            <%}%>
            <% if(address==el[1].to){%>
               <td class="text-truncate" style="max-width: 150px; font-weight: bold" ><a href='/eth/wallet/<%=el[1].to%>'>
            <% } else {%>
               <td class="text-truncate" style="max-width: 150px;" ><a href='/eth/wallet/<%=el[1].to%>'>
            <% } %>
            <%=el[1].to%></a></td>
            
            <td><%=el[1].value%></td> 
            <td><span>âœ“</span></td>
         </tr>
         <% }) %>
      </tbody>
   </table>
 </div>

